<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/headToolBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/backBtn"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_back"/>
        <TextView
            android:id="@+id/numberOfNote"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:text="0字"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/isSpeaking"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/numberOfNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/completeBtn"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="完成"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <include layout="@layout/devision_line" android:layout_below="@+id/headToolBar" android:layout_height="0.1dp" android:layout_width="match_parent"></include>
    <ScrollView
        android:layout_marginBottom="40dp"
        android:layout_below="@+id/headToolBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/noteEt"
                android:background="@null"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>
    <include layout="@layout/devision_line" android:layout_above="@+id/feetToolbar" android:layout_height="0.1dp" android:layout_width="match_parent"></include>
    <RelativeLayout
        android:id="@+id/feetToolbar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/speakBtn"
            android:src="@android:drawable/ic_btn_speak_now"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
</RelativeLayout>